{
    "suggest.enablePreselect": false,
    "suggest.autoTrigger": "always",
    "suggest.fixInsertedWord": false,
    "suggest.timeout": 500,
    "suggest.triggerAfterInsertEnter": true,
    "suggest.triggerCompletionWait": 30,
    "suggest.removeDuplicateItems": true,
    "suggest.fixInsertedWord": false,
    
    "diagnostic.level": "hint",
    "diagnostic.messageDelay": 100,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.maxWindowHeight": 20,
    "diagnostic.enable": true,
    "diagnostic.virtualText": false,
    "diagnostic.messageTarget": "echo",


    "rust-analyzer.enable": true,
    "rust-analyzer.updates.channel": "nightly",
    "rust-analyzer.checkOnSave.enable": true,
    "rust-analyzer.checkOnSave.command": "clippy",
    "rust-analyzer.diagnostics.enableExperimental": false,
    "rust-analyzer.diagnostics.enable": true,
    "rust-analyzer.procMacro.enable": true,
    "rust-analyzer.updates.prompt": false,
    "rust-analyzer.inlayHints.chainingHints": true,
    "rust-analyzer.lruCapacity": 1024,
    "rust-analyzer.inlayHints.typeHintsSeparator": "┇ ",
    "rust-analyzer.inlayHints.chainingHintsSeparator": "┇ ",
    "rust-analyzer.notifications.cargoTomlNotFound": false,
    "rust-analyzer.cargo.allFeatures": true,
    "rust-analyzer.diagnostics.disabled": ["inactive-code"],
    "typescript.showUnused": false,
    "typescript.format.enabled":  true,
    "python.linting.flake8Enabled": true,

    "languageserver": {
        "elmLS": {
            "command": "elm-language-server",
            "filetypes": ["elm"],
            "rootPatterns": ["elm.json"],
            "disableDiagnostics": true
        },
        "ocaml-lsp": {
            "command": "opam",
            "args": ["config", "exec", "--", "ocamllsp"],
            "rootPatterns": ["dune-project"],
            "filetypes": ["ocaml", "reason"]
        }
    },

    "coc.preferences.colorSupport": true,
    "coc.preferences.jumpCommand": "edit",
    "coc.preferences.formatOnSaveFiletypes": [""],
    "coc.preferences.extensionUpdateCheck": "never"
}
